<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Lighting?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<fx:root fitToHeight="true" fitToWidth="true" style="-fx-background-color: black;" type="ScrollPane" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: darkolivegreen;">
         <children>
            <Text stroke="BLACK" strokeWidth="2.0" text="Licenses">
               <font>
                  <Font name="Constantia Bold" size="64.0" />
               </font>
               <fill>
                  <LinearGradient cycleMethod="REFLECT" endX="0.8428571428571429" endY="0.4809523809523809" startX="0.7619047619047619" startY="0.41904761904761906">
                     <stops>
                        <Stop color="DARKSLATEGRAY" />
                        <Stop color="OLIVEDRAB" offset="1.0" />
                     </stops>
                  </LinearGradient>
               </fill>
               <effect>
                  <DropShadow blurType="TWO_PASS_BOX" color="#111111" height="180.0" radius="89.5" spread="0.8" width="180.0">
                     <input>
                        <Lighting diffuseConstant="1.5" light="$null" specularConstant="1.5" specularExponent="30.0" surfaceScale="5.0">
                           <bumpInput>
                              <Shadow blurType="TWO_PASS_BOX" color="LEMONCHIFFON" height="20.0" radius="9.5" width="20.0" />
                           </bumpInput>
                        </Lighting>
                     </input></DropShadow>
               </effect>
            </Text>
            <Accordion style="-fx-border-color: black; -fx-border-width: 2; -fx-border-radius: 10;" VBox.vgrow="ALWAYS">
              <panes>
                <TitledPane animated="false" style="-fx-border-color: black; -fx-border-width: 2;" text="Game License" textFill="DARKSLATEGRAY">
                     <content>
                        <ScrollPane fitToWidth="true" style="-fx-border-color: black; -fx-border-width: 2; -fx-border-radius: 10;">
                           <content>
                              <TextFlow>
                                 <children>
                                    <Text fx:id="gameLicenseText">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Text>
                                 </children>
                                 <padding>
                                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                 </padding>
                              </TextFlow>
                           </content>
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                        </ScrollPane>
                     </content>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                </TitledPane>
                <TitledPane animated="false" style="-fx-border-color: black; -fx-border-width: 2;" text="Music License" textFill="DARKSLATEGRAY">
                     <content>
                        <ScrollPane fitToWidth="true" style="-fx-border-color: black; -fx-border-width: 2; -fx-border-radius: 10;">
                           <content>
                              <TextFlow>
                                 <children>
                                    <Text fx:id="musicLicenseText">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Text>
                                 </children>
                                 <padding>
                                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                 </padding>
                              </TextFlow>
                           </content>
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                        </ScrollPane>
                     </content>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                </TitledPane>
                <TitledPane animated="false" style="-fx-border-color: black; -fx-border-width: 2;" text="Sound Effects License" textFill="DARKSLATEGRAY">
                     <content>
                        <ScrollPane fitToWidth="true" style="-fx-border-color: black; -fx-border-width: 2; -fx-border-radius: 10;">
                           <content>
                              <TextFlow>
                                 <children>
                                    <Text fx:id="soundEffectsLicenseText">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Text>
                                 </children>
                                 <padding>
                                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                 </padding>
                              </TextFlow>
                           </content>
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                        </ScrollPane>
                     </content>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                </TitledPane>
              </panes>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Accordion>
            <Button fx:id="mainMenuButton" mnemonicParsing="false" style="-fx-background-color: orange; -fx-background-radius: 10; -fx-border-color: black; -fx-border-width: 2; -fx-border-radius: 10;" text="Main Menu" textFill="DARKSLATEGRAY">
               <font>
                  <Font name="Constantia Bold" size="14.0" />
               </font>
               <effect>
                  <Reflection fraction="0.25" topOpacity="0.25" />
               </effect>
            </Button>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </content>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</fx:root>
